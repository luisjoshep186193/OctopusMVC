@{
    ViewData["Title"] = "Home Page";
}
    <div class="jumbotron jumbotron bg-cover">
        <div class="overlay"></div>
        <div class="container" style="max-height:200px">
            <h1 class="display-3 mb-1">Octopus</h1>
            <p class="lead">Realiza recargas electronicas y <span>paga tus servicios.</span>.</p>
            <!--Start carousel-->
            <div id="carouselOffices" class="carousel slide  mb-10" data-ride="carousel">
                <!--Start indicators-->
                <ol class="carousel-indicators mt-10">
                    <li data-target="#carouselOffices" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselOffices" data-slide-to="1"></li>
                    <li data-target="#carouselOffices" data-slide-to="2"></li>
                </ol>
                <!--Start sections-->
                <div class="carousel-inner">
                    <div class="carousel-item active row">


                        <img src="~/images/movi.jpg" class="imgCarousel d-block mx-auto" alt="...">

                        <div class="carousel-caption d-none d-md-block backMsg">
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary">Más Cercanos</a>
                            <p>Encuentra espacios cercanos a tu localización.</p>


                        </div>

                    </div>
                    <div class="carousel-item">
                        <img src="~/images/att.png" class="imgCarousel d-block mx-auto" alt="...">


                        <div class="carousel-caption d-none d-md-block backMsg">
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-success">Más Accesibles</a>
                            <p>Explora los espacios a precio justo.</p>
                        </div>

                    </div>
                    <div class="carousel-item">

                        <img src="~/images/recarga.jpg" class="imgCarousel d-block mx-auto" alt="...">

                        <div class="carousel-caption d-none d-md-block backMsg">
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-warning">Mejor Valorados</a>
                            <p>Encuentra las mejores reseñas.</p>
                        </div>





                    </div>
                </div>
                <!--End sections-->
                <!--Start controls-->
                <a class="carousel-control-prev" href="#carouselOffices" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselOffices" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <!--End carousel-->

        </div>
    </div>
 
