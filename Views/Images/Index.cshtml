@model IEnumerable<Octopus.Models.Image>

@{
    ViewData["Title"] = "Index";
}

<input hidden id="pageType" name="Images" />

<div class="jumbotron">
    <p>
        <a class="btn btn-outline-primary" onclick="showModal(this)" id="" name="Create">Nueva Imagen</a>
    </p>
    <table class="table table-striped table responsive table-dark" style="margin-left:0px !important">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ImageName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.URL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssetId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PType)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImageName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.URL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssetId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PType.Id)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
