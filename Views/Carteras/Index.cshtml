@model IEnumerable<Octopus.Models.Cartera>

@{
    ViewData["Title"] = "Index";
}

<input hidden id="pageType" name="Carteras" />
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SaldoTAE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaldoNormal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComisionTAE)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SaldoTAE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SaldoNormal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComisionTAE)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
