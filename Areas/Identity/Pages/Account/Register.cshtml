@page
@using Microsoft.EntityFrameworkCore
@using System.Dynamic
@using Octopus.Models
@model RegisterModel
@inject Octopus.Data.ApplicationDbContext context
@{
    ViewData["Title"] = "Nuevo Usuario";
    dynamic mymodel = new ExpandoObject();

    var userReg = context.UsuarioRegions.ToList();
    var regions = context.Regions.ToList();
    mymodel.userReg = userReg;
    mymodel.regions = regions;
}

<a class="btn btn-danger btn-block col-2" asp-controller="Users" asp-action="Index">Regresar</a>

<div class="col-12 col-md-6 col-md-offset-4 container mt-10" style="border-radius:10px; background-color:azure">
    <div class="col-10 col-offset-2">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Crear una nueva cuenta.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Nombre"></label>
                <input asp-for="Input.Nombre" class="form-control" />
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" type="number" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Comision"></label>
                <input type="number" max="7" min="1" asp-for="Input.Comision" class="form-control" />
                <span asp-validation-for="Input.Comision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CuotaServicios"></label>
                <input type="number" max="15" min="3" asp-for="Input.CuotaServicios" class="form-control" />
                <span asp-validation-for="Input.CuotaServicios" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
