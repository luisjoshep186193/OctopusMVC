@page
@model LoginModel

@{
    ViewData["Title"] = "Bienvenido";
}


<div class="container contRecargar">
    <h3>@ViewData["Title"]</h3>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h4>Inicia sesión con tu número de telefono y contraseña.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input id="phoneNumber" asp-for="Input.PhoneNumber" type="number" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input id="confirmPhone" asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Log in</button>
                    </div>
                    
                </form>
            </section>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <section style="max-height:300px">
                <h4>Espacios Destacados.</h4>
                <hr />
                <div class="row container" style="max-height:200px">
                    <div id="carouselOffices" class="carousel slide  mb-10" data-ride="carousel">
                        <!--Start indicators-->
                        <ol class="carousel-indicators mt-10">
                            <li data-target="#carouselOffices" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselOffices" data-slide-to="1"></li>
                            <li data-target="#carouselOffices" data-slide-to="2"></li>
                        </ol>
                        <!--Start sections-->
                        <div class="carousel-inner">
                            <div class="carousel-item active row">


                                <img src="~/images/salapersonal.jpeg" class="imgCarousel d-block mx-auto" alt="...">

                                <div class="carousel-caption d-none d-md-block backMsg">
                                    <a asp-action="Index" asp-controller="Salas" class="btn btn-outline-primary">Más Cercanos</a>
                                    <p>Encuentra espacios cercanos a tu localización.</p>


                                </div>

                            </div>
                            <div class="carousel-item">
                                <img src="~/images/moviliario.jpg" class="imgCarousel d-block mx-auto" alt="...">


                                <div class="carousel-caption d-none d-md-block backMsg">
                                    <a asp-action="Index" asp-controller="Salas" class="btn btn-outline-success">Más Accesibles</a>
                                    <p>Explora los espacios a precio justo.</p>
                                </div>

                            </div>
                            <div class="carousel-item">

                                <img src="~/images/salapersonal.jpeg" class="imgCarousel d-block mx-auto" alt="...">

                                <div class="carousel-caption d-none d-md-block backMsg">
                                    <a asp-action="Index" asp-controller="Salas" class="btn btn-outline-warning">Mejor Valorados</a>
                                    <p>Encuentra las mejores reseñas.</p>
                                </div>





                            </div>
                        </div>
                        <!--End sections-->
                        <!--Start controls-->
                        <a class="carousel-control-prev" href="#carouselOffices" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselOffices" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>

            </section>
        </div>
    </div>
</div>






@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
